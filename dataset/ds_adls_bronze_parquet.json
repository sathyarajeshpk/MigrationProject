{
	"name": "ds_adls_bronze_parquet",
	"properties": {
		"linkedServiceName": {
			"referenceName": "ToDatalake",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"p_database_name": {
				"type": "string",
				"defaultValue": "@pipeline().parameters.database_name"
			},
			"p_table_name": {
				"type": "string",
				"defaultValue": "@pipeline().parameters.table_name"
			},
			"p_load_date": {
				"type": "string",
				"defaultValue": "@formatDateTime(utcNow(),'yyyy-MM-dd')"
			}
		},
		"annotations": [],
		"type": "Parquet",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"folderPath": {
					"value": "@concat(\n  'mysql/',\n  item().database_name,\n  '/',\n  item().table_name,\n  '/load_date=',\n  formatDateTime(utcNow(),'yyyy-MM-dd')\n)\n",
					"type": "Expression"
				},
				"fileSystem": "datalake"
			},
			"compressionCodec": "snappy"
		},
		"schema": []
	}
}